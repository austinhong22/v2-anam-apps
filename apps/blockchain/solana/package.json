{
  "name": "solana-wallet",
  "version": "1.0.0",
  "description": "Solana 지갑 미니앱",
  "main": "app.js",
  "scripts": {
    "start": "vite --host",
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "bundle:build": "cd ../../../bundler/blockchain/solana-bundler && npm install --no-audit --no-fund && npm run build",
    "bundle:copy": "cp ../../../bundler/blockchain/solana-bundler/dist/solana-bundle.umd.cjs ./assets/solana-bundle.umd.cjs",
    "build:prod": "npm run bundle:build && npm run bundle:copy && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^26.1.0",
    "vite": "^5.4.19",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "bip39": "^3.1.0"
  },
  "keywords": [
    "solana",
    "wallet",
    "blockchain",
    "cryptocurrency"
  ],
  "author": "Anam Team",
  "license": "MIT"
}
